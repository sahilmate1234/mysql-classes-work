(2, 2, 'Vitalik Buterin', 'Founder', 'Russia', 10, 'vitalik@eth.com', 'github.com/vitalik', '2015-07-30', 'Active');

SELECT * FROM Developers;
TRUNCATE TABLE Developers;
DROP TABLE Developers;

-- 9Ô∏è‚É£ PORTFOLIO TABLE
CREATE TABLE Portfolio (
    Portfolio_ID INT PRIMARY KEY,
    User_ID INT,
    Crypto_ID INT,
    Quantity DECIMAL(15,4),
    Average_Buy DECIMAL(15,2),
    Current_Value DECIMAL(15,2),
    Profit_Loss DECIMAL(15,2),
    Last_Updated DATE,
    Strategy VARCHAR(50),
    Risk_Level VARCHAR(20)
);

INSERT INTO Portfolio VALUES
(1, 1, 1, 1.5000, 55000.00, 65000.00, 15000.00, '2024-06-12', 'HODL', 'Medium'),
(2, 2, 2, 5.0000, 2800.00, 3200.00, 2000.00, '2024-06-13', 'Day Trade', 'High');

SELECT * FROM Portfolio;
TRUNCATE TABLE Portfolio;
DROP TABLE Portfolio;

-- üîü SECURITY_LOG TABLE
CREATE TABLE Security_Log (
    Log_ID INT PRIMARY KEY,
    User_ID INT,
    Action_Type VARCHAR(50),
    IP_Address VARCHAR(50),
    Device VARCHAR(50),
    Location VARCHAR(100),
    Action_Date DATETIME,
    Status VARCHAR(20),
    Remarks VARCHAR(100),
    Severity_Level VARCHAR(20)
);

INSERT INTO Security_Log VALUES
(1, 1, 'Login', '192.168.1.10', 'Laptop', 'Delhi, India', '2024-06-14 09:30:00', 'Success', 'Authorized login', 'Low'),
(2, 2, 'Password Reset', '172.16.0.5', 'Mobile', 'New York, USA', '2024-06-15 10:00:00', 'Success', 'User reset', 'Medium');

SELECT * FROM Security_Log;
TRUNCATE TABLE Security_Log;
DROP TABLE Security_Log;

